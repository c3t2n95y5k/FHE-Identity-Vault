{
  "name": "hushvote-contracts",
  "version": "1.0.0",
  "description": "HushVote - FHE-enabled privacy-preserving voting smart contracts using Zama",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "compile:sepolia": "hardhat compile --network sepolia",
    "test": "hardhat test",
    "test:sepolia": "hardhat test --network sepolia",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "create-voting:sepolia": "hardhat run scripts/create-voting-sepolia.js --network sepolia",
    "deploy:devnet": "hardhat run scripts/deploy.js --network zama",
    "verify": "hardhat verify",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "console": "hardhat console",
    "size": "hardhat size-contracts",
    "lint": "solhint 'contracts/**/*.sol'",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "slither": "slither ."
  },
  "keywords": [
    "FHE",
    "voting",
    "privacy",
    "blockchain",
    "zama",
    "homomorphic-encryption"
